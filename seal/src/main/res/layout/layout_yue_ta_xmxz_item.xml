<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_xmxz_item_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_homepage_adapter_item_layout"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/color_E4E4E4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px128"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_xmxz_skill_item_iv"
            android:layout_width="@dimen/px70"
            android:layout_height="@dimen/px70"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginStart="@dimen/px30"
            android:src="@drawable/user_detail_paobu" />

        <TextView
            android:id="@+id/activity_xmxz_skill_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginStart="@dimen/px30"
            android:text="跑步"
            android:textColor="@color/black"
            android:textSize="@dimen/text_px32" />

        <TextView
            android:id="@+id/activity_xmxz_skill_item_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginStart="@dimen/px30"
            android:text="300元／小时"
            android:textColor="@color/black"
            android:textSize="@dimen/text_px32" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/activity_xmxz_skill_item_select_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/px30"
            android:layout_marginRight="@dimen/px30"
            android:src="@drawable/ic_xmxz_da_gou"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout>