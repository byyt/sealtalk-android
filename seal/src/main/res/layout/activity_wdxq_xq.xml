<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F4F4F4"
    android:orientation="vertical">

    <!-- 高度动态计算，状态栏高度+48dp -->
    <FrameLayout
        android:id="@+id/activity_xmxz_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_common_new">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px96"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/activity_xmxz_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:paddingBottom="@dimen/px15"
                android:paddingEnd="@dimen/px30"
                android:paddingLeft="@dimen/px30"
                android:paddingRight="@dimen/px30"
                android:paddingStart="@dimen/px30"
                android:paddingTop="@dimen/px15"
                android:src="@drawable/user_detail_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="想约的项目"
                android:textColor="@color/white"
                android:textSize="@dimen/text_px36" />

            <TextView
                android:id="@+id/activity_xmxz_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:paddingBottom="@dimen/px15"
                android:paddingEnd="@dimen/px30"
                android:paddingLeft="@dimen/px30"
                android:paddingRight="@dimen/px30"
                android:paddingStart="@dimen/px30"
                android:paddingTop="@dimen/px15"
                android:text="客服"
                android:textColor="@color/white"
                android:textSize="@dimen/text_px32" />

        </FrameLayout>

    </FrameLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/activity_xmxz_root_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingEnd="@dimen/text_px30"
                android:paddingLeft="@dimen/text_px30"
                android:paddingRight="@dimen/text_px30"
                android:paddingStart="@dimen/text_px30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px90"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/activity_wdxq_xq_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已结束"
                        android:textColor="@color/color_FD0303"
                        android:textSize="@dimen/text_px32" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/activity_wdxq_xq_qr"
                        android:layout_width="@dimen/px150"
                        android:layout_height="@dimen/px50"
                        android:background="@drawable/bg_common_new_8_radius_press"
                        android:gravity="center"
                        android:text="点击确认"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_px32" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px1"
                    android:background="@color/color_E4E4E4" />

                <RelativeLayout
                    android:id="@+id/activity_wdxq_xq_status_desc_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/activity_wdxq_xq_status_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/px26"
                        android:layout_marginTop="@dimen/px26"
                        android:layout_toLeftOf="@+id/activity_wdxq_xq_xq"
                        android:text="对方未及时接受预约，预付款已退回您的账户。请点击”我的钱包”-“余额”进行查看。"
                        android:textColor="@color/color_9B999F"
                        android:textSize="@dimen/text_px24" />


                    <TextView
                        android:id="@+id/activity_wdxq_xq_xq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/px30"
                        android:layout_marginStart="@dimen/px30"
                        android:drawableEnd="@drawable/ic_more_small_black"
                        android:drawablePadding="2dp"
                        android:drawableRight="@drawable/ic_more_small_black"
                        android:gravity="center"
                        android:text="详情"
                        android:textColor="@color/color_4D4D4D"
                        android:textSize="@dimen/text_px26" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px1"
                    android:background="@color/color_E4E4E4" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px40">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px10"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/px5"
                        android:background="@drawable/bg_wdxq_line_gray" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="center_horizontal"
                        android:minWidth="@dimen/px160"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/activity_wdxq_xq_jd_1_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/px26"
                            android:text="已付预付款"
                            android:textColor="@color/color_E4E4E4"
                            android:textSize="@dimen/text_px26" />

                        <View
                            android:id="@+id/activity_wdxq_xq_jd_1_dot"
                            android:layout_width="@dimen/px20"
                            android:layout_height="@dimen/px20"
                            android:background="@drawable/bg_wdxq_dot_gray" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:minWidth="@dimen/px160"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/activity_wdxq_xq_jd_2_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/px26"
                            android:text="待接受"
                            android:textColor="@color/color_E4E4E4"
                            android:textSize="@dimen/text_px26" />

                        <View
                            android:id="@+id/activity_wdxq_xq_jd_2_dot"
                            android:layout_width="@dimen/px20"
                            android:layout_height="@dimen/px20"
                            android:background="@drawable/bg_wdxq_dot_gray" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="center_horizontal"
                        android:minWidth="@dimen/px160"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/activity_wdxq_xq_jd_3_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/px26"
                            android:text="待付全款"
                            android:textColor="@color/color_E4E4E4"
                            android:textSize="@dimen/text_px26" />

                        <View
                            android:id="@+id/activity_wdxq_xq_jd_3_dot"
                            android:layout_width="@dimen/px20"
                            android:layout_height="@dimen/px20"
                            android:background="@drawable/bg_wdxq_dot_gray" />

                    </LinearLayout>

                    <View
                        android:id="@+id/activity_wdxq_xq_red_line_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px10"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/px5"
                        android:background="@drawable/bg_wdxq_line_red"
                        android:visibility="gone" />


                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/px55"
                    android:layout_marginTop="@dimen/px50">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px10"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/px5"
                        android:background="@drawable/bg_wdxq_line_gray" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="center_horizontal"
                        android:minWidth="@dimen/px160"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/activity_wdxq_xq_jd_4_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/px26"
                            android:text="待确认"
                            android:textColor="@color/color_E4E4E4"
                            android:textSize="@dimen/text_px26" />

                        <View
                            android:id="@+id/activity_wdxq_xq_jd_4_dot"
                            android:layout_width="@dimen/px20"
                            android:layout_height="@dimen/px20"
                            android:background="@drawable/bg_wdxq_dot_gray" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:minWidth="@dimen/px160"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/activity_wdxq_xq_jd_5_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/px26"
                            android:text="待评价"
                            android:textColor="@color/color_E4E4E4"
                            android:textSize="@dimen/text_px26" />

                        <View
                            android:id="@+id/activity_wdxq_xq_jd_5_dot"
                            android:layout_width="@dimen/px20"
                            android:layout_height="@dimen/px20"
                            android:background="@drawable/bg_wdxq_dot_gray" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="center_horizontal"
                        android:minWidth="@dimen/px160"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/activity_wdxq_xq_jd_6_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/px26"
                            android:text="完成"
                            android:textColor="@color/color_E4E4E4"
                            android:textSize="@dimen/text_px26" />

                        <View
                            android:id="@+id/activity_wdxq_xq_jd_6_dot"
                            android:layout_width="@dimen/px20"
                            android:layout_height="@dimen/px20"
                            android:background="@drawable/bg_wdxq_dot_gray" />

                    </LinearLayout>

                    <View
                        android:id="@+id/activity_wdxq_xq_red_line_2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px10"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/px5"
                        android:background="@drawable/bg_wdxq_line_red"
                        android:visibility="gone" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px20"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingEnd="@dimen/px30"
                android:paddingLeft="@dimen/px30"
                android:paddingRight="@dimen/px30"
                android:paddingStart="@dimen/px30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px170"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.itheima.roundedimageview.RoundedImageView
                        android:id="@+id/activity_wdxq_xq_portrait"
                        android:layout_width="@dimen/px110"
                        android:layout_height="@dimen/px110"
                        android:scaleType="centerCrop"
                        android:src="@drawable/de_default_portrait"
                        app:riv_oval="true" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px30"
                        android:layout_marginStart="@dimen/px30"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/px16"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/activity_wdxq_xq_nickname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/color_3C3B3B"
                                android:textSize="@dimen/text_px30"
                                tools:text="小明同学" />

                            <cn.yunchuang.im.ui.widget.AgeSexView
                                android:id="@+id/activity_wdxq_xq_age_sex_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/px20"
                                android:layout_marginStart="@dimen/px20"
                                android:visibility="gone"
                                tools:visibility="visible" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/activity_wdxq_xq_zhuti_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/color_8B8B8B"
                            android:textSize="@dimen/text_px26"
                            tools:text="主题：跑步"
                            tools:visibility="visible" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="总价¥660元"
                            android:textColor="@color/color_FD0303"
                            android:textSize="@dimen/text_px30" />
                        tools:text="总价¥660元" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/px4"
                            android:gravity="end"
                            android:text="预付款¥180元"
                            android:textColor="@color/color_3BB035"
                            android:textSize="@dimen/text_px26" />
                        tools:text="预付款¥180元" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/px35"
                        android:layout_height="@dimen/px35"
                        android:layout_marginLeft="@dimen/px20"
                        android:layout_marginStart="@dimen/px20"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_wdxq_xq_jg_wh" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px1"
                    android:background="@color/color_E4E4E4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px100"
                    android:gravity="start|center_vertical"
                    android:text="预约时间：2019-05-16 14:00"
                    android:textColor="@color/color_3C3B3B"
                    android:textSize="@dimen/text_px30" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px1"
                    android:background="@color/color_E4E4E4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px100"
                    android:gravity="start|center_vertical"
                    android:text="预约时长：2小时"
                    android:textColor="@color/color_3C3B3B"
                    android:textSize="@dimen/text_px30" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px1"
                    android:background="@color/color_E4E4E4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px100"
                    android:gravity="start|center_vertical"
                    android:text="预约地点：高新园(地铁站)"
                    android:textColor="@color/color_3C3B3B"
                    android:textSize="@dimen/text_px30" />

            </LinearLayout>

            <TextView
                android:id="@+id/activity_wdxq_xq_fxx_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px90"
                android:layout_marginBottom="@dimen/px200"
                android:layout_marginEnd="@dimen/px30"
                android:layout_marginLeft="@dimen/px30"
                android:layout_marginRight="@dimen/px30"
                android:layout_marginStart="@dimen/px30"
                android:layout_marginTop="@dimen/px30"
                android:background="@drawable/bg_common_new_8_radius_press"
                android:gravity="center"
                android:text="发消息"
                android:textColor="@color/white"
                android:textSize="@dimen/text_px36" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>