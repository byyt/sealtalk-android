                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:src="@drawable/mine_fragment_more_white" />

                </LinearLayout>
            </FrameLayout>

            <include layout="@layout/layout_20px_gap" />

            <LinearLayout
