    <!-- 高度动态计算，状态栏高度+48dp -->
    <FrameLayout
        android:id="@+id/fragment_mine_new_title_layout_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px96"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/fragment_mine_new_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="小明同学"
                android:textColor="@color/black"
                android:textSize="@dimen/text_px36" />

            <ImageView
                android:id="@+id/fragment_mine_new_title_bianji_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:paddingBottom="@dimen/px10"
                android:paddingEnd="@dimen/px30"
