<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/operate_window_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7f000000"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px86"
        android:layout_marginRight="@dimen/px86"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/common_dialog_content_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100"
            android:gravity="center"
            android:text="该图片需要付费才能看，请支付"
            android:textColor="@color/black"
            android:textSize="@dimen/text_px30" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px70"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/common_dialog_cancel_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/black"
                android:textSize="@dimen/text_px30" />

            <View
                android:layout_width="@dimen/px1"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <TextView
                android:id="@+id/common_dialog_sure_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="支付"
                android:textColor="@color/black"
                android:textSize="@dimen/text_px30" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>