<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_operation_card_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 标题栏高度会通过计算设置，状态栏高度+内容高度 -->
    <FrameLayout
        android:id="@+id/homepage_new_title_root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rs_select_btn_common_new">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px108">

                <TextView
                    android:id="@+id/homepage_new_title_location_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginLeft="@dimen/px30"
                    android:layout_marginStart="@dimen/px30"
                    android:drawableLeft="@drawable/hompage_title_dingwei"
                    android:drawablePadding="@dimen/px10"
                    android:drawableStart="@drawable/hompage_title_dingwei"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_px30"
                    tools:text="深圳" />

                <ImageView
                    android:id="@+id/homepage_new_title_shaixuan_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:padding="@dimen/px30"
                    android:src="@drawable/homepage_title_shaixuan"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_px36" />

            </FrameLayout>

            <LinearLayout
                android:layout_marginBottom="@dimen/px14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/homepage_new_title_jlzj_tab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="距离最近"
                    android:textColor="@color/color_D9D6DE"
                    android:textSize="@dimen/text_px30" />

                <TextView
                    android:id="@+id/homepage_new_title_cnxh_tab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="猜你喜欢"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_px32" />

                <TextView
                    android:id="@+id/homepage_new_title_hpyx_tab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="好评优先"
                    android:textColor="@color/color_D9D6DE"
                    android:textSize="@dimen/text_px30" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/homepage_new_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>