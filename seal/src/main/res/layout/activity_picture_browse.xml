<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_detail_new_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/activity_picture_browse_banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/px100"
        android:layout_marginTop="@dimen/px100" />

    <TextView
        android:id="@+id/activity_picture_browse_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px300"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_px40" />

</FrameLayout>