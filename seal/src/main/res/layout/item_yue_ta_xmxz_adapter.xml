<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homepage_adabpter_item_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_homepage_adapter_item_layout"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px96"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/homepage_adapter_item_yue_ta_xmxz_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/px30"
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginRight="@dimen/px30"
            android:layout_marginStart="@dimen/px30"
            android:text="随着时间和个人的成长，每个人喜欢的东西不一样…"
            android:textColor="@color/color_9B999F"
            android:textSize="@dimen/text_px28" />

        <TextView
            android:id="@+id/homepage_adapter_item_yue_ta_xmxz_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/px30"
            android:layout_marginLeft="@dimen/px30"
            android:layout_marginRight="@dimen/px30"
            android:layout_marginStart="@dimen/px30"
            android:text="随着时间和个人的成长，每个人喜欢的东西不一样…"
            android:textColor="@color/color_9B999F"
            android:textSize="@dimen/text_px28" />


        <ImageView
            android:id="@+id/homepage_adapter_item_yue_ta_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_homepage_adapter_item_yue_ta" />
    </LinearLayout>


</LinearLayout>