<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homepage_adabpter_item_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_wdyh_lb_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20"
        android:background="@drawable/bg_common_while_press_e4e4e4"
        android:orientation="vertical"
        android:paddingEnd="@dimen/px30"
        android:paddingLeft="@dimen/px30"
        android:paddingRight="@dimen/px30"
        android:paddingStart="@dimen/px30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px190"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.itheima.roundedimageview.RoundedImageView
                android:id="@+id/item_wdyh_lb_portrait"
                android:layout_width="@dimen/px110"
                android:layout_height="@dimen/px110"
                android:scaleType="centerCrop"
                app:riv_oval="true"
                tools:src="@drawable/de_default_portrait" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px30"
                android:layout_marginStart="@dimen/px30"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/px16"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_wdyh_lb_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/color_3C3B3B"
                        android:textSize="@dimen/text_px30"
                        tools:text="小明同学" />

                    <cn.yunchuang.im.ui.widget.AgeSexView
                        android:id="@+id/item_wdyh_lb_age_sex_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/px20"
                        android:layout_marginStart="@dimen/px20"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </LinearLayout>

                <TextView
                    android:id="@+id/item_wdyh_lb_zt_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/color_8B8B8B"
                    android:textSize="@dimen/text_px28"
                    tools:text="主题：跑步"
                    tools:visibility="visible" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_wdyh_lb_zj_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textColor="@color/color_3C3B3B"
                    android:textSize="@dimen/text_px30"
                    tools:text="¥660元" />

                <TextView
                    android:id="@+id/item_wdyh_lb_sc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px16"
                    android:gravity="end"
                    android:textColor="@color/color_8B8B8B"
                    android:textSize="@dimen/text_px28"
                    tools:text="2小时" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:background="@color/color_E4E4E4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px90"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约状态："
                android:textColor="@color/color_3C3B3B"
                android:textSize="@dimen/text_px30" />

            <TextView
                android:id="@+id/item_wdyh_lb_yyzt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FF6261"
                android:textSize="@dimen/text_px30"
                tools:text="已结束" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:background="@color/color_E4E4E4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px90"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约类型："
                android:textColor="@color/color_3C3B3B"
                android:textSize="@dimen/text_px30" />

            <TextView
                android:id="@+id/item_wdyh_lb_yylx_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FF6261"
                android:textSize="@dimen/text_px30"
                tools:text="我约Ta" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>