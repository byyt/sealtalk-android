<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px180"
        android:text="请先完善个人资料哦～"
        android:textColor="@color/color_030303"
        android:textSize="@dimen/text_px50" />

    <ImageView
        android:id="@+id/register_code_portrait"
        android:layout_width="@dimen/px136"
        android:layout_height="@dimen/px136"
        android:layout_marginTop="@dimen/px62"
        android:scaleType="fitXY"
        android:src="@drawable/touxiang" />

    <EditText
        android:id="@+id/register_code_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px40"
        android:layout_marginRight="@dimen/px40"
        android:layout_marginTop="@dimen/px90"
        android:background="@null"
        android:ellipsize="end"
        android:gravity="center"
        android:hint="起一个响亮的名字吧"
        android:inputType="textPersonName"
        android:maxLength="32"
        android:maxLines="1"
        android:textColor="@color/color_030303"
        android:textColorHint="@color/color_C1C2C8"
        android:textSize="@dimen/text_px30" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px84"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/register_code_sex_woman"
            android:layout_width="@dimen/px128"
            android:layout_height="@dimen/px62"
            android:layout_marginRight="@dimen/px142"
            android:scaleType="fitXY"
            android:src="@drawable/register_woman" />

        <ImageView
            android:id="@+id/register_code_sex_man"
            android:layout_width="@dimen/px128"
            android:layout_height="@dimen/px62"
            android:scaleType="fitXY"
            android:src="@drawable/register_woman" />

    </LinearLayout>

    <TextView
        android:id="@+id/register_code_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px82"
        android:layout_marginLeft="@dimen/px100"
        android:layout_marginRight="@dimen/px100"
        android:layout_marginTop="@dimen/px92"
        android:background="@drawable/register_code_sure_bg"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/text_px35" />

</LinearLayout>