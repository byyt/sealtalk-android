<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px96">

        <TextView
            android:id="@+id/login_title_back"
            android:layout_width="@dimen/px78"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/title_back"
            android:paddingLeft="@dimen/px30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="完善信息"
            android:textColor="@color/color_B6B5BA"
            android:textSize="@dimen/text_px36" />
    </FrameLayout>


    <ImageView
        android:id="@+id/register_code_portrait"
        android:layout_width="@dimen/px142"
        android:layout_height="@dimen/px142"
        android:layout_marginBottom="@dimen/px102"
        android:layout_marginTop="@dimen/px108"
        android:scaleType="fitXY"
        android:src="@drawable/add_tou_xiang" />

    <EditText
        android:id="@+id/register_code_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:ellipsize="end"
        android:hint="起个名字"
        android:inputType="textPersonName"
        android:maxLength="12"
        android:maxLines="1"
        android:textColor="@color/color_615E63"
        android:textColorHint="@color/color_C4C3C8"
        android:textSize="@dimen/text_px36" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:layout_marginLeft="@dimen/px86"
        android:layout_marginRight="@dimen/px86"
        android:layout_marginTop="@dimen/px20"
        android:background="@color/color_E4E4E4" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px70"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/register_code_sex_man"
            android:layout_width="@dimen/px150"
            android:layout_height="@dimen/px72"
            android:layout_marginRight="@dimen/px130"
            android:scaleType="fitXY"
            android:src="@drawable/register_man_normal" />

        <ImageView
            android:id="@+id/register_code_sex_woman"
            android:layout_width="@dimen/px150"
            android:layout_height="@dimen/px72"
            android:scaleType="fitXY"
            android:src="@drawable/register_woman_normal" />

    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/px26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性别选择后不能修改"
        android:textSize="@dimen/text_px26" />

    <TextView
        android:id="@+id/register_code_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px82"
        android:layout_marginLeft="@dimen/px86"
        android:layout_marginRight="@dimen/px86"
        android:layout_marginTop="@dimen/px70"
        android:background="@drawable/rs_select_btn_common"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/text_px36" />

</LinearLayout>