<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_bg_takephoto"
        android:orientation="vertical">

        <TextView
            android:id="@+id/select_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_paizhao"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/tip_takephoto"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dialogplus_card_shadow" />

        <TextView
            android:id="@+id/select_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_xzzp"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/tip_form_pic_takephoto"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dialogplus_card_shadow" />

        <TextView
            android:id="@+id/delte_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_xzzp"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/tip_delte_takephoto"
            android:textColor="@color/black"
            android:textSize="18sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/select_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_bg_quxiao"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/tip_cancel_takephoto"
        android:textColor="#0076FF"
        android:textSize="18sp"/>
</LinearLayout>